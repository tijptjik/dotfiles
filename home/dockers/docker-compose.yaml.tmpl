{{ if .isServer -}}
services:
  radarr:
    container_name: radarr
    image: lscr.io/linuxserver/radarr:latest
    restart: unless-stopped
    logging:
      driver: json-file
    ports:
      - 7878:7878
    environment:
      - PUID=1000
      - PGID=950
      - TZ=Asia/Hong_Kong
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - /mnt/storage/meta/appData/radarr:/config
      - /mnt/storage:/data
  sonarr:
    container_name: sonarr
    image: lscr.io/linuxserver/sonarr:develop
    restart: unless-stopped
    logging:
      driver: json-file
    ports:
      - 9090:9090
    environment:
      - PUID=1000
      - PGID=950
      - TZ=Asia/Hong_Kong
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - /mnt/storage/meta/appData/sonarr:/config
      - /mnt/storage:/data
  transmission:
    container_name: transmission
    image: lscr.io/linuxserver/transmission:latest
    restart: unless-stopped
    environment:
      - PUID=1000
      - PGID=950
      - TZ=Asia/Hong_Kong
      - USER=media #optional
      - PASS=guidance #optional
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - /mnt/storage/meta/appData/transmission:/config
      - /mnt/storage/meta/downloads:/downloads
      - /mnt/storage/meta/downloads/.torrents:/watch
      - /mnt/storage:/data
    ports:
      - 9091:9091
      - 51413:51413
      - 51413:51413/udp
  jackett:
    image: lscr.io/linuxserver/jackett:latest
    container_name: jackett
    environment:
      - PUID=1000
      - PGID=950
      - TZ=Asia/Hong_Kong
      - AUTO_UPDATE=true #optional
      - RUN_OPTS= #optional
    volumes:
      - /mnt/storage/meta/appData/jackett:/config
      - /mnt/storage/meta/downloads:/downloads
    ports:
      - 9117:9117
    restart: unless-stopped
  calibre-web:
    image: lscr.io/linuxserver/calibre-web:latest
    container_name: calibre-web
    environment:
      - PUID=1000
      - PGID=950
      - TZ=Asia/Hong_Kong
      - DOCKER_MODS=linuxserver/mods:universal-calibre #optional
      - OAUTHLIB_RELAX_TOKEN_SCOPE=1 #optional
    volumes:
      - /path/to/calibre-web/data:/config
      - /mnt/storage/public/books/EN:/books
    ports:
      - 8083:8083
    restart: unless-stopped
  tautulli:
    image: lscr.io/linuxserver/tautulli:latest
    container_name: tautulli
    environment:
      - PUID=1000
      - PGID=950
      - TZ=Asia/Hong_Kong
    volumes:
      - /mnt/storage/meta/appData/tautulli:/config
    ports:
      - 8181:8181
    restart: unless-stopped
  auto-m4b:
    image: seanap/auto-m4b
    container_name: auto-m4b
    volumes:
      - /home/m/.tools/auto-m4b:/config
      - /mnt/storage/meta/downloads/audiobooks:/temp
    environment:
      - PUID=1000
      - PGID=950
      - CPU_CORES=4
      - SLEEPTIME=1m
      - MAKE_BACKUP=N
  beets-audible:
    image: lscr.io/linuxserver/beets:latest
    container_name: beets-audible
    environment:
      - PUID=1000
      - PGID=950
      - TZ=Asia/Hong_Kong
    volumes:
      - /home/m/.tools/beets-audible/beets/config:/config
      - /home/m/.tools/beets-audible/beets/scripts:/config/custom-cont-init.d
      - /mnt/storage/public/audiobooks:/audiobooks
      - /mnt/storage/meta/downloads/audiobooks/untagged:/untagged
    restart: unless-stopped
{{ end -}}
