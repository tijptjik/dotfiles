# ~/.config/fish/conf.d/variables.fish
# #######################
# FISH : VARIABLES
# #######################

# Author : Mart van de Ven
# Contact : https://type.hk

#################################
### LANGUAGE DEFAULTS
#################################

set -x LC_ALL en_US.UTF-8
set -x LC_CTYPE en_US.UTF-8

#################################
### QT
#################################

set -x QT_QPA_PLATFORMTHEME qt6ct

#################################
### COMMON VARIABLES
#################################

set -x BROWSER /bin/zen-browser
set -x UAEDITOR subl
set -x EDITOR micro
set -x VISUAL subl
set -x PAGER ov
set -x MANPAGER "sh -c 'col -bx | bat -l man -p'"

#################################
### XDG PATH VARIABLES
#################################

# apps
set -x XDG_DATA_HOME $HOME/.local/share
set -x XDG_CONFIG_HOME $HOME/.config
set -x XDG_STATE_HOME $HOME/.local/state

# assets
set -x XDG_DOWNLOAD_DIR $HOME/downloads
set -x XDG_TEMPLATES_DIR $HOME/resources
set -x XDG_DOCUMENTS_DIR $HOME/documents
set -x XDG_MUSIC_DIR $HOME/media/recordings
set -x XDG_PICTURES_DIR $HOME/media/images
set -x XDG_VIDEOS_DIR $HOME/media/videos

# desktop
set -x XDG_DESKTOP_DIR $HOME/.desktop
set -x XDG_PUBLICSHARE_DIR $HOME/.public

#################################
### PATH VARIABLES | USER
#################################

set -x TOOLS "$HOME/.tools"
set -x CONFIG "$HOME/.config"
set -x LOCALSHARE "$HOME/.local/share"

#################################
### FISH
#################################

# Only display the folder name
set -g theme_short_path yes

# Display git stash indicator
set -g theme_stash_indicator yes

# Do not display user@hostname when in an SSH session
set -g theme_ignore_ssh_awareness yes

#################################
### GIT
#################################

# GitHub
set -x GIT_OPTIONAL_LOCKS 0

#################################
### LLM : OPENAI
#################################

#################################
### LLM : ANTHROPIC
#################################

{{ if eq .anthropicModelProvider "zai" -}}

set -x ANTHROPIC_BASE_URL "https://api.z.ai/api/anthropic"
set -x ANTHROPIC_MODEL "GLM-4.6"
set -x ANTHROPIC_DEFAULT_OPUS_MODEL "GLM-4.6"
set -x ANTHROPIC_DEFAULT_SONNET_MODEL "GLM-4.6"
set -x ANTHROPIC_DEFAULT_HAIKU_MODEL "GLM-4.5-Air"
set -x CLAUDE_CODE_SUBAGENT_MODEL "GLM-4.6"

{{ else if eq .anthropicModelProvider "claude" -}}

set -x ANTHROPIC_BASE_URL "https://api.anthropic.com/v1"

{{ else if eq .anthropicModelProvider "moonshot" -}}

set -x ANTHROPIC_BASE_URL "https://api.moonshot.ai/anthropic"
set -x ANTHROPIC_MODEL "kimi-k2-thinking-turbo"
set -x ANTHROPIC_DEFAULT_OPUS_MODEL "kimi-k2-thinking-turbo"
set -x ANTHROPIC_DEFAULT_SONNET_MODEL "kimi-k2-thinking-turbo"
set -x ANTHROPIC_DEFAULT_HAIKU_MODEL "kimi-k2-thinking-turbo"
set -x CLAUDE_CODE_SUBAGENT_MODEL "kimi-k2-thinking-turbo"

{{ end -}}

#################################
### NGROK
#################################

set -x NGROK_DOMAIN dove-main-tapir.ngrok-free.app

#################################
### JS : NODE
#################################

# fnm
set -x FNM_PATH $LOCALSHARE/fnm
# fnm env | source

set -x NPM_CONFIG_USERCONFIG $CONFIG/npm/npmrc


#################################
### JS : BUN
#################################

set -x BUN_INSTALL $HOME/.bun
set -x PATH $BUN_INSTALL/bin $PATH

# svelte
# Used to swtich between SSR (Cloudflare) or Static (Android) targets
set -x SVELTE_ADAPTER "cloudflare"

#################################
### PYTHON
#################################

# Config `pip' to bail outside a virtualenv by default, see function gpip
set -x PIP_REQUIRE_VIRTUALENV 0

# Disable `virtualenv' activate script to override prompt
set -x VIRTUAL_ENV_DISABLE_PROMPT 1

# cache pip-installed packages to avoid re-downloading
set -x  PIP_DOWNLOAD_CACHE $HOME/.pip/cache

#################################
### GOLANG
#################################

# The GOPATH environment variable lists places to look for Go code
set -x GOPATH $LOCALSHARE/go

#################################
### PAGERS
#################################

# from http://blog.0x1fff.com/2009/11/linux-tip-color-enabled-pager-less.html
set -x LESS "-RSM~gIsw"

# https://github.com/zyedidia/micro/blob/master/runtime/help/colors.md
set -x MICRO_TRUECOLOR 1

#################################
### APPLICATIONS
#################################

# Transmission
set -x TRANSMISSION_HOME "$CONFIG/transmission/"
