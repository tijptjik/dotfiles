{{ if .isDesktop -}}

# Primary

# Samsung Odyssey G8
monitorv2 {
    output = DP-1
    mode = 3440x1440@119.960999
    position = 0x0
    scale = 1
    bitdepth = 10
    cm = auto
    supports_wide_color = 1
    supports_hdr = 1
}

# Secondary

### HP23
monitorv2 {
    output = DP-2
    mode = 1920x1080@74.97
    position = 3440x720
    scale = 1
    bitdepth = 8
    cm = srgb
}

