}

{{ else if .isLaptop -}}

# Primary
monitorv2 {
    output = eDP-1
    mode = 3840x2400@60.00
    position = 0x0
    scale = 2
}

# Secondary
monitorv2 {
    output = DP-2
    mode = 1920x1080@60.00
    position = auto-right
    scale = 1
}

{{- end }}
