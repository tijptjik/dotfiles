// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "edit_predictions": {
        "provider": "supermaven"
    },
    "ui_font_size": 19.0,
    "buffer_line_height": "comfortable",
    "format_on_save": "off",
    "code_actions_on_format": {
        "source.organizeImports.biome": true,
        "source.fixAll.biome": true
    },
    "lsp": {
        "biome": {
            "binary": {
                "path": "/home/io/.bun/bin/biome",
                "arguments": ["lsp-proxy"]
            },
            "settings": {
                "require_config_file": true
            }
        }
    },
    "lsp_document_colors": "background",
    "file_types": {
      "JSONC": ["**/.zed/**/*.json", "**/zed/**/*.json", "**/Zed/**/*.json", "**/.vscode/**/*.json","*.json.tmpl"],
      "YAML": ["**/waybar/config.tmpl"],
      "TOML": ["**/dunst/dunstrc.tmpl"],
      "Shell Script": [".env.*"],
      "Fish" : ["*.fish.tmpl", "*.yaml.tmpl", "*.yml.tmpl", "*.conf", "*.conf.tmpl","private_sshd_config"]
    },
    "languages": {
        "JavaScript": {
            "formatter": { "language_server": { "name": "biome" } },
            "code_actions_on_format": {
                "source.fixAll.biome": true,
                "source.organizeImports.biome": false
            }
        },
        "TypeScript": {
            "formatter": { "language_server": { "name": "biome" } },
            "code_actions_on_format": {
                "source.fixAll.biome": true,
                "source.organizeImports.biome": true
            }
        },
        "JSON": {
            "formatter": { "language_server": { "name": "biome" } },
            "code_actions_on_format": {
                "source.fixAll.biome": true
            }
        },
        "JSONC": {
            "formatter": { "language_server": { "name": "biome" } },
            "code_actions_on_format": {
                "source.fixAll.biome": true
            }
        },
        "CSS": { "formatter": { "language_server": { "name": "biome" } } }
    },
    "project_panel": {
        "hide_gitignore": false
    },
    "git_panel": {
        "sort_by_path": false
    },
    "agent": {
        "always_allow_tool_actions": true,
        "default_model": {
            "provider": "google",
            "model": "gemini-2.5-flash"
        },
        "model_parameters": []
    },
    "agent_servers": {
      "gemini": {
        "ignore_system_version": false
      }
    },
    "context_servers": {
        "mcp-server-context7": {
            "enabled": true,
            "settings": {
                "context7_api_key": {{ (bitwardenSecrets "22a5479c-f2de-43e1-9547-b3ec001d508b").value | quote}}
            }
        }
    },
    "icon_theme": "JetBrains New UI Icons (Dark)",
    "vim_mode": false,
    "base_keymap": "Cursor",
    "buffer_font_family": ".ZedMono",
    "buffer_font_weight": 400.0,
    "buffer_font_size": 18.0,
    "buffer_font_features": {
      "calt": true,
      "ss13" : true
    },
    "theme": {
        "mode": "system",
        "light": "One Dark",
        "dark": "Ros√© Punk"
    },
    "language_models": {
        "anthropic": {
            "available_models": [
                {
                    "name": "kimi-k2-0905-preview",
                    "display_name": "Kimi K2 (0905)",
                    "max_tokens": 256000
                },
                {
                    "name": "kimi-k2-turbo-preview",
                    "display_name": "Kimi K2 (Turbo)",
                    "max_tokens": 256000
                }
            ]
        }
    }
}
